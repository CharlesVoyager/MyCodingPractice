<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Foo Release" Background="LightCoral" BorderBrush="Black" BorderThickness="1" Click="FooRelease_Click" />
        <Button Grid.Row="0" Grid.Column="2" Content="Bar Release" Background="LightBlue" BorderBrush="Black" BorderThickness="1" Click="BarRelease_Click"/>

        <TextBox x:Name="LogTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="" Background="LightCyan" TextAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
